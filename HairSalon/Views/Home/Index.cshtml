
<!DOCTYPE html>
<html>
  <head>
    <title>The Hair Salon</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css'>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
</head>
  <body>
    <h1>The Awesome Hair Salon</h1>

    <div class="container">
      @if (Model.Count != null)
      {
        <ul>
          @foreach (var stylist in Model)
          {
            <a href="/stylists/@stylist.GetId()"><li>@stylist.GetName()</li></a>
          }
        </ul>
      }
      @if (Model.Count == 0)
      {
        <h2> There are no stylists working here </h2>
      }
      <a href="/stylists/new"><button type="button" class="btn">Add Stylist</button></a>

    </div>
  </body>
</html>
